<launch>
  <!-- Always set GUI to false for AWS RoboMaker Simulation
       Use gui:=true on roslaunch command-line to run with a gui.
  -->
  <arg name="gui" default="false"/>


  <!-- Optional physics profile for Gazebo server. The .world file must have 
       the corresponding physics profile name. If unspecified, the physics 
       profile tagged as default=true is used.                                                                                                                                       
       See http://gazebosim.org/tutorials?tut=preset_manager&cat=physics                                                                                                             
  -->
  <arg name="physics_profile" value="$(optenv PHYSICS_PROFILE '')"/>                                                                                                                 

  <!-- Optional flag to set models as static=false to test physics.                                                                                                           
       If set true, the world will explode due to collisions. 
  -->
  <arg name="dynamic_world" value="$(optenv DYNAMIC_WORLD false)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aws_robomaker_bookstore_world)/worlds/bookstore.world" if="$(eval dynamic_world == false)"/>
    <arg name="world_name" value="$(find aws_robomaker_bookstore_world)/worlds/bookstore_dynamic.world" if="$(eval dynamic_world == true)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" default="$(arg gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
    <arg name="verbose" value="true"/>
  </include>
</launch>
